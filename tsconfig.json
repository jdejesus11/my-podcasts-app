{
    "compilerOptions": {
        "target": "ES5",
        "module":"ESNext",
        "outDir": "dist",
        "noEmit": false,
        "allowJs": true,
        "checkJs": true,
        "noImplicitAny": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "isolatedModules": false
    },
    "include": ["src/**/*", "*.ts", "*.tsx", "mocks", "mocks"],
    "exclude": ["node_modules", "**/*.spec.ts", "assets", "dist", "./webpack.dev.js", "./webpack.common.js", "./webpack.prod.js"]
}